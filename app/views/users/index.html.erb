<%= render 'users/list', user: @user, book: @book %>
<div class="col-xs-9">
        <h2>Users</h2>

           <table class="table table-hover table-inverse">
           <thead>
           <tr> 
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
           </tr>
           </thead>
           
           <tbody>
           <% @users.each do |user| %>
           <tr>
             <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no-image.jpg" %></th>
             <th><%= user.name %></th>
             <th>
                 <%= link_to "show",user_path(user.id) %>
             </th>
           </th>
           <% end %>
           </tbody>
       </table>

           
           
        </div>