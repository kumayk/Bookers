<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
<nav class="navbar navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand">
        Bookers
      </a>
    </div>
    <div class="collapse navbar-collapse" id="navbarExample7">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to " Home", user_path(current_user.id), class:"glyphicon glyphicon-home" %></li>
          <li><%= link_to " Users", users_path, class:"glyphicon glyphicon-user" %></li>
          <li><%= link_to " Books", books_path, class:"glyphicon glyphicon-book" %></li>
          <li><%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to " Home", root_path, class:"glyphicon glyphicon-home" %></li>
          <li><%= link_to " About", home_about_path, class:"glyphicon glyphicon-book" %></li>
          <li><%= link_to " Sign up", new_user_registration_path, class:"glyphicon glyphicon-new-window" %></li>
          <li><%= link_to " log in", new_user_session_path, class:"glyphicon glyphicon-log-in" %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

    <%= yield %>
    
<footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
    
  </body>
</html>
