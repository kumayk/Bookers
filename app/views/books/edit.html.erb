<% if @book.errors.any? %>
         <div class="alert alert-warning">
           <h5>error</h5>
         <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
         </ul>
         </div>
    <% end %>

<div class="body">
 <div class="container">
<h2>Books</h2>
   <%= form_for(@book) do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Opinion</h5>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
   <% end %>
 
 <%=link_to "Show", book_path(@book.id) %> |
 <%=link_to "Back", books_path(@book.id) %>
   
 </div>
</div>


